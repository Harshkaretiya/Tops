<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/headding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EBDF09"
        android:gravity="center"
        android:text="Cricket Tournament"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/img1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/headding"
        android:layout_marginTop="50dp"
        android:src="@drawable/indian" />
    <TextView
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="India"
        android:layout_below="@+id/img1"
        android:gravity="center"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#FF8400"/>


    <ImageView
        android:id="@+id/img2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:layout_below="@id/t1"
        android:src="@drawable/bangladesh"/>

    <TextView
        android:id="@+id/t2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img2"
        android:gravity="center"
        android:text="Bangladeah"
        android:textColor="#017A2A"
        android:textSize="40dp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/img3"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:layout_below="@id/t2"
        android:src="@drawable/afghanistan"/>

    <TextView
        android:id="@+id/t3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img3"
        android:gravity="center"
        android:text="Afghanistan"
        android:textColor="#258A00"
        android:textSize="40dp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/img4"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:layout_below="@id/t3"
        android:src="@drawable/hong_kong"/>

    <TextView
        android:id="@+id/t4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img4"
        android:gravity="center"
        android:text="Hong Kong"
        android:layout_marginBottom="50dp"
        android:textColor="#FF0000"
        android:textSize="40dp"
        android:textStyle="bold" />

</RelativeLayout>
    </ScrollView>