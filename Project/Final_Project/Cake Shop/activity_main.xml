<?xml version="1.0" encoding="utf-8"?>
<nl.psdcompany.duonavigationdrawer.views.DuoDrawerLayout android:id="@+id/drawer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    tools:context=".activity.MainActivity">


    <nl.psdcompany.duonavigationdrawer.views.DuoMenuView
        android:tag="menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#1A2530"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/backButton"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:src="@drawable/left1"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    app:tint="#707B81" />
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    app:cardCornerRadius="40dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="20dp"
                    >
                    <ImageView
                        android:id="@+id/profile_image_main_activity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/ic_launcher"
                        android:scaleType="centerCrop"
                        />
                </com.google.android.material.card.MaterialCardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hey,ðŸ‘‹"
                    android:textSize="20sp"
                    android:fontFamily="@font/airbnbcereal_bk"
                    android:textColor="#707B81"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    />
                <TextView
                    android:id="@+id/name_main_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your First Name"
                    android:fontFamily="@font/airbnbcereal_md"
                    android:textSize="24dp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    />
                <LinearLayout
                    android:id="@+id/menu_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="50dp"
                    >
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/user"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Profile"
                        android:textColor="@color/white"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/airbnbcereal_md"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/menu_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    >
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/cart1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Cart"
                        android:textColor="@color/white"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/airbnbcereal_md"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/menu_favourite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    >
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/heart"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Favourite"
                        android:textColor="@color/white"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/airbnbcereal_md"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/menu_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    >
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/order"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Order"
                        android:textColor="@color/white"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/airbnbcereal_md"
                        />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/line"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="20dp"
                    />
                <LinearLayout
                    android:id="@+id/menu_sign_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    >
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/signout"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Sign Out"
                        android:textColor="@color/white"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/airbnbcereal_md"
                        />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </nl.psdcompany.duonavigationdrawer.views.DuoMenuView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:tag="content"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/top_round"
            android:layout_marginTop="-30dp"
            />
        <FrameLayout
            android:id="@+id/fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:background="#F8F9FA"
            >
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="#F8F9FA"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:alpha="0"
                android:layout_centerVertical="true"
                app:navigationIcon="@drawable/navigation_icon"
                />
        </FrameLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardCornerRadius="15dp"
            android:backgroundTint="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-10dp"
            >
            <me.ibrahimsn.lib.SmoothBottomBar
                android:id="@+id/bottomNavBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:backgroundColor="@color/white"
                app:indicatorColor="#5B9EE1"
                app:iconTint="#707B81"
                android:layout_marginBottom="10dp"
                app:indicatorRadius="12dp"
                app:sideMargins="10dp"
                app:menu="@menu/bottom_nav"/>
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>

</nl.psdcompany.duonavigationdrawer.views.DuoDrawerLayout>