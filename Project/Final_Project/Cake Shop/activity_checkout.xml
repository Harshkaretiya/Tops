<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CheckoutActivity"
    android:background="#F8F9FA"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            >
            <ImageView
                android:id="@+id/back_button_checkout_activity"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/left2"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Checkout"
                android:fontFamily="@font/airbnbcereal_md"
                android:textSize="16sp"
                android:layout_centerInParent="true"
                android:textColor="#1A2530"
                />
        </RelativeLayout>
        <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="40dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingVertical="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Information"
                android:fontFamily="@font/airbnbcereal_md"
                android:textSize="14sp"
                android:textColor="#1A2530"
                android:layout_marginLeft="20dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                >
                <ImageView
                    android:id="@+id/email_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/email"
                    />
                <TextView
                    android:id="@+id/email_checkout"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/email_image"
                    android:fontFamily="@font/airbnbcereal_bk"
                    android:textSize="14sp"
                    android:textColor="#1A2530"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:text="Your Email"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:layout_below="@id/email_checkout"
                    android:layout_toRightOf="@id/email_image"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/airbnbcereal_bk"
                    android:textSize="12sp"
                    android:textColor="#707B81"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                >
                <ImageView
                    android:id="@+id/phone_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/phone"
                    />
                <TextView
                    android:id="@+id/phone_checkout"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/phone_image"
                    android:fontFamily="@font/airbnbcereal_bk"
                    android:textSize="14sp"
                    android:textColor="#1A2530"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:text="1234568790"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:layout_below="@id/phone_checkout"
                    android:layout_toRightOf="@id/phone_image"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/airbnbcereal_bk"
                    android:textSize="12sp"
                    android:textColor="#707B81"
                    />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:fontFamily="@font/airbnbcereal_md"
                android:textSize="14dp"
                android:textColor="#1A2530"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                >
                <ImageView
                    android:id="@+id/location_icon"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:text="Your Location"
                    android:src="@drawable/location"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="2dp"
                    />
                <TextView
                    android:id="@+id/location_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Area"
                    android:layout_toRightOf="@id/location_icon"
                    android:textSize="14sp"
                    android:ellipsize="end"
                    android:maxWidth="140dp"
                    android:maxLines="1"
                    android:layout_marginBottom="5dp"
                    android:layout_centerVertical="true"
                    android:textColor="#1A2530"
                    android:fontFamily="@font/airbnbcereal_md"
                    />

                <TextView
                    android:id="@+id/location_comma_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=","
                    android:textSize="14sp"
                    android:layout_marginBottom="5dp"
                    android:layout_centerVertical="true"
                    android:textColor="#1A2530"
                    android:layout_marginRight="2dp"
                    android:layout_toRightOf="@id/location_area"
                    android:fontFamily="@font/airbnbcereal_md"
                    />
                <TextView
                    android:id="@+id/location_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:ellipsize="end"
                    android:maxWidth="80dp"
                    android:maxLines="1"
                    android:layout_marginBottom="5dp"
                    android:textColor="#1A2530"
                    android:layout_toRightOf="@id/location_comma_tag"
                    android:fontFamily="@font/airbnbcereal_md"
                    />
                <TextView
                    android:id="@+id/change_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change"
                    android:textSize="13dp"
                    android:padding="5dp"
                    android:fontFamily="@font/airbnbcereal_bk"
                    android:textColor="#707B81"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/checkout_layout"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/top_round"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subtotal"
                android:textSize="16sp"
                android:fontFamily="@font/airbnbcereal_md"
                android:textColor="#707B81"
                />
            <TextView
                android:id="@+id/subtotal_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:layout_alignParentRight="true"
                android:textSize="16sp"
                android:fontFamily="@font/airbnbcereal_md"
                android:textColor="#1A2530"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹"
                android:layout_toLeftOf="@id/subtotal_price"
                android:layout_marginRight="2dp"
                android:textSize="16sp"
                android:fontFamily="@font/airbnbcereal_md"
                android:textColor="#1A2530"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shipping"
                android:textSize="16sp"
                android:fontFamily="@font/airbnbcereal_md"
                android:textColor="#707B81"
                />
            <TextView
                android:id="@+id/shipping_price_cart_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:layout_alignParentRight="true"
                android:textSize="16sp"
                android:fontFamily="@font/airbnbcereal_md"
                android:textColor="#1A2530"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹"
                android:layout_toLeftOf="@id/shipping_price_cart_activity"
                android:layout_marginRight="2dp"
                android:textSize="16sp"
                android:fontFamily="@font/airbnbcereal_md"
                android:textColor="#1A2530"
                />
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/divider"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:layout_marginHorizontal="20dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Cost"
                android:textSize="16sp"
                android:fontFamily="@font/airbnbcereal_md"
                android:textColor="#1A2530"
                />
            <TextView
                android:id="@+id/total_cost_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1050"
                android:layout_alignParentRight="true"
                android:textSize="16sp"
                android:fontFamily="@font/airbnbcereal_md"
                android:textColor="#1A2530"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹"
                android:layout_toLeftOf="@id/total_cost_price"
                android:layout_marginRight="2dp"
                android:textSize="16sp"
                android:fontFamily="@font/airbnbcereal_md"
                android:textColor="#1A2530"
                />
        </RelativeLayout>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/payment_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="20dp"
            android:backgroundTint="#5B9EE1"
            app:cardCornerRadius="25dp"
            android:layout_marginHorizontal="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment"
                android:textColor="@color/white"
                android:fontFamily="@font/airbnbcereal_md"
                android:textSize="18sp"
                android:layout_gravity="center"
                />
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</RelativeLayout>