<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ProductViewActivity"
    android:background="#F8F9FA"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="80dp"
            android:scrollbarSize="0dp"
            android:background="@color/white"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_margin="20dp"
                    >
                    <ImageView
                        android:id="@+id/back_button_product_view"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/left2"
                        />
                    <ImageView
                        android:id="@+id/cart_button_product_view"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/cart"
                        android:layout_alignParentEnd="true"
                        />
                </RelativeLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="3:2"
                        tools:ignore="MissingConstraints">
                        <com.smarteist.autoimageslider.SliderView
                            android:id="@+id/product_view_slider"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            />
                        <androidx.cardview.widget.CardView
                            android:id="@+id/favouriteLayout"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            app:cardCornerRadius="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="20dp"
                            android:backgroundTint="#F5F5F7"
                            >
                            <ImageView
                                android:id="@+id/favourite"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:src="@drawable/heart"
                                />
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/white"
                    >
                    <TextView
                        android:id="@+id/product_name_product_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product Name"
                        android:textSize="24sp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:textColor="#1A2530"
                        android:fontFamily="@font/airbnbcereal_md"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:fontFamily="@font/airbnbcereal_md"
                            android:textColor="#1A2530"
                            android:text="â‚¹"
                            />
                        <TextView
                            android:id="@+id/product_price_product_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:fontFamily="@font/airbnbcereal_md"
                            android:textColor="#1A2530"
                            android:layout_marginLeft="5dp"
                            android:text="100"
                            />

                    </LinearLayout>
                    <TextView
                        android:id="@+id/productDescProductView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="100dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="20dp"
                        android:text="Description"
                        android:fontFamily="@font/airbnbcereal_bk"
                        android:textColor="#707B81"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="Flavour"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/airbnbcereal_md"
                        android:textColor="#1A2530"
                        />
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        app:cardCornerRadius="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="#F8F9FA"
                        android:outlineSpotShadowColor="@color/white"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingHorizontal="10dp"
                            >
                            <TextView
                                android:id="@+id/flavour_product_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:text="Chocolate"
                                android:fontFamily="@font/airbnbcereal_bk"
                                android:textColor="#707B81"
                                />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="weight"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/airbnbcereal_md"
                        android:textColor="#1A2530"
                        />
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="#F8F9FA"
                        android:outlineSpotShadowColor="@color/white"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            >
                            <TextView
                                android:id="@+id/weight_product_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:text="100"
                                android:fontFamily="@font/airbnbcereal_bk"
                                android:textColor="#707B81"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:text="g"
                                android:fontFamily="@font/airbnbcereal_bk"
                                android:textColor="#707B81"
                                />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="Delivering to"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/airbnbcereal_md"
                        android:textColor="#1A2530"
                        />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        >
                        <ImageView
                            android:id="@+id/location_icon"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:text="Your Location"
                            android:src="@drawable/location"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="2dp"
                            />
                        <TextView
                            android:id="@+id/location_area"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Area"
                            android:ellipsize="end"
                            android:maxWidth="140dp"
                            android:maxLines="1"
                            android:layout_toRightOf="@id/location_icon"
                            android:textSize="14sp"
                            android:layout_marginBottom="5dp"
                            android:layout_centerVertical="true"
                            android:textColor="#1A2530"
                            android:fontFamily="@font/airbnbcereal_md"
                            />

                        <TextView
                            android:id="@+id/location_comma_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=","
                            android:textSize="14sp"
                            android:layout_marginBottom="5dp"
                            android:layout_centerVertical="true"
                            android:textColor="#1A2530"
                            android:layout_marginRight="2dp"
                            android:layout_toRightOf="@id/location_area"
                            android:fontFamily="@font/airbnbcereal_md"
                            />
                        <TextView
                            android:id="@+id/location_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="City"
                            android:ellipsize="end"
                            android:maxWidth="80dp"
                            android:maxLines="1"
                            android:layout_centerVertical="true"
                            android:textSize="14sp"
                            android:layout_marginBottom="5dp"
                            android:textColor="#1A2530"
                            android:layout_toRightOf="@id/location_comma_tag"
                            android:fontFamily="@font/airbnbcereal_md"
                            />
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivers within 24 hours"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/airbnbcereal_bk"
                        android:textSize="15sp"
                        android:layout_marginTop="5dp"
                        android:textColor="#00AA07"
                        android:layout_marginLeft="30dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="Seller's Information"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/airbnbcereal_md"
                        android:textColor="#1A2530"
                        />
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="10dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shop "
                            android:textSize="15dp"
                            android:fontFamily="@font/airbnbcereal_md"
                            android:layout_columnWeight="1"
                            android:layout_marginTop="10dp"
                            android:textColor="#1A2530"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Labheshwar Dairy"
                            android:textSize="15dp"
                            android:fontFamily="@font/airbnbcereal_md"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="30dp"
                            android:layout_columnWeight="5"
                            android:textColor="#707B81"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shop Address"
                            android:textSize="15dp"
                            android:fontFamily="@font/airbnbcereal_md"
                            android:layout_columnWeight="1"
                            android:maxWidth="100dp"
                            android:layout_marginTop="10dp"
                            android:textColor="#1A2530"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="pasodara Road, pasodara patiya brts,kmarej surat"
                            android:textSize="15dp"
                            android:fontFamily="@font/airbnbcereal_md"
                            android:layout_marginTop="10dp"
                            android:layout_columnWeight="5"
                            android:layout_marginLeft="30dp"
                            android:maxWidth="200dp"
                            android:textColor="#707B81"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shop Email"
                            android:textSize="15dp"
                            android:fontFamily="@font/airbnbcereal_md"
                            android:layout_columnWeight="1"
                            android:maxWidth="100dp"
                            android:layout_marginTop="10dp"
                            android:textColor="#1A2530"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="labheshwardairy@gmail.com"
                            android:textSize="15dp"
                            android:fontFamily="@font/airbnbcereal_md"
                            android:layout_marginTop="10dp"
                            android:layout_columnWeight="5"
                            android:layout_marginLeft="30dp"
                            android:textColor="#707B81"
                            />
                    </GridLayout>
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="235dp"
                        android:scrollbars="none"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp"
                        android:scrollbarAlwaysDrawHorizontalTrack="true"
                        >

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/grid_item_product_view"
                            android:layout_width="wrap_content"
                            android:layout_height="235dp"
                            android:paddingLeft="20dp"
                            android:scrollbars="horizontal"
                            android:stretchMode="none"
                            android:nestedScrollingEnabled="false"
                            />
                    </HorizontalScrollView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/top_round"
            android:layout_alignParentBottom="true"
            android:backgroundTint="@color/white"
            android:elevation="10dp"
            >
            <TextView
                android:id="@+id/price_tag_product_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:fontFamily="@font/airbnbcereal_bk"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textColor="#707B81"
                />
            <LinearLayout
                android:id="@+id/price_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/price_tag_product_view"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/airbnbcereal_md"
                    android:textColor="#1A2530"
                    android:text="â‚¹"
                    />

                <TextView
                    android:id="@+id/product_price_bottom_product_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/airbnbcereal_md"
                    android:text="100"
                    android:textColor="#1A2530"
                    android:textSize="20sp" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity : "
                android:layout_toRightOf="@id/price_layout"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:fontFamily="@font/airbnbcereal_bk"
                android:textColor="#707B81"
                />
            <LinearLayout
                android:id="@+id/quantity_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/price_tag_product_view"
                android:layout_toRightOf="@id/price_layout"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                >
                <ImageView
                    android:id="@+id/quantity_subtract"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/subtract"
                    />
                <TextView
                    android:id="@+id/quantity_product_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="1"
                    android:textColor="#707B81"
                    android:fontFamily="@font/airbnbcereal_md"
                    android:layout_marginLeft="10dp"
                    />
                <ImageView
                    android:id="@+id/quantity_add"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/add"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                >
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/GoToCart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="50dp"
                    android:backgroundTint="#5B9EE1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:text="Go To Cart"
                        android:paddingHorizontal="30dp"
                        android:paddingVertical="15dp"
                        />

                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/addToCart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="50dp"
                    android:backgroundTint="#5B9EE1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:text="Add To Cart"
                        android:paddingHorizontal="30dp"
                        android:paddingVertical="15dp"
                        />

                </com.google.android.material.card.MaterialCardView>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>