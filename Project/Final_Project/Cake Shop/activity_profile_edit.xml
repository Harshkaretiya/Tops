<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ProfileEditActivity"
    android:orientation="vertical"
    android:background="#F8F9FA"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:id="@+id/back_button_profile_activity"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/left2"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/airbnbcereal_md"
            android:text="Profile Edit"
            android:textColor="#1A2530"
            android:textSize="16sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/image_layout_profile_edit_activity"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:cardCornerRadius="45dp"
            >
            <ImageView
                android:id="@+id/image_profile_edit_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>
        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/photoedit"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:elevation="2dp"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"
        android:fontFamily="@font/airbnbcereal_md"
        android:textColor="#1A2530"
        />
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="50dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/white"
        android:outlineSpotShadowColor="@color/white"
        >
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/name_layout_profile_edit_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="52dp"
            app:boxStrokeWidth="0dp"
            app:helperTextTextColor="#FF0000"
            app:hintEnabled="false"
            android:paddingLeft="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            >
            <EditText
                android:id="@+id/name_profile_edit_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="52dp"
                android:background="@color/white"
                android:hint="Name"
                android:text=""
                android:textColor="#1A2530"
                android:textColorHint="#707B81"
                android:textSize="14sp"
                android:fontFamily="@font/airbnbcereal_bk"
                android:textColorHighlight="#5B9EE1" />
        </com.google.android.material.textfield.TextInputLayout>
    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Numebr"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"
        android:fontFamily="@font/airbnbcereal_md"
        android:textColor="#1A2530"
        />
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="50dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/white"
        android:outlineSpotShadowColor="@color/white"
        >
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email_layout_profile_edit_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="52dp"
            app:boxStrokeWidth="0dp"
            app:helperTextTextColor="#FF0000"
            app:hintEnabled="false"
            android:paddingLeft="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            >
            <EditText
                android:id="@+id/phone_number_profile_edit_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="52dp"
                android:background="@color/white"
                android:hint="Phone number"
                android:inputType="number"
                android:textColor="#1A2530"
                android:textColorHint="#707B81"
                android:textSize="14sp"
                android:fontFamily="@font/airbnbcereal_bk"
                android:textColorHighlight="#5B9EE1" />
        </com.google.android.material.textfield.TextInputLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/save_button_profile_edit_activity"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="#5B9EE1"
        app:cardCornerRadius="26dp"
        android:layout_marginTop="40dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Save Changes"
            android:textSize="16sp"
            android:textColor="@color/white"
            />

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>