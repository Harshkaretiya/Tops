<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_marginVertical="5dp"
        android:backgroundTint="@color/white"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/street"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="street"
                android:fontFamily="@font/airbnbcereal_bk"
                android:textSize="14sp"
                android:textColor="#1A2530"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=","
                android:fontFamily="@font/airbnbcereal_bk"
                android:textSize="14sp"
                android:layout_toRightOf="@id/street"
                android:textColor="#1A2530"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="city"
                android:layout_below="@id/street"
                android:fontFamily="@font/airbnbcereal_bk"
                android:textSize="14sp"
                android:textColor="#1A2530"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:id="@+id/city_comma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=","
                android:fontFamily="@font/airbnbcereal_bk"
                android:textSize="14sp"
                android:layout_toRightOf="@id/city"
                android:textColor="#1A2530"
                android:layout_marginTop="5dp"
                android:layout_below="@id/street"
                />
            <TextView
                android:id="@+id/state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="State"
                android:fontFamily="@font/airbnbcereal_bk"
                android:textSize="14sp"
                android:layout_toRightOf="@id/city_comma"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/street"
                android:layout_marginTop="5dp"
                android:textColor="#1A2530"
                />
            <TextView
                android:id="@+id/zipcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="zipcode"
                android:layout_below="@id/city"
                android:fontFamily="@font/airbnbcereal_bk"
                android:textSize="14sp"
                android:textColor="#1A2530"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:id="@+id/zipcode_dash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:fontFamily="@font/airbnbcereal_bk"
                android:textSize="14sp"
                android:layout_toRightOf="@id/zipcode"
                android:textColor="#1A2530"
                android:layout_marginTop="5dp"
                android:layout_below="@id/city"
                />
            <TextView
                android:id="@+id/country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country"
                android:fontFamily="@font/airbnbcereal_bk"
                android:textSize="14sp"
                android:layout_toRightOf="@id/zipcode_dash"
                android:layout_below="@id/city"
                android:layout_marginTop="5dp"
                android:textColor="#1A2530"
                android:layout_marginBottom="20dp"
                />

            <TextView
                android:id="@+id/primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Primary"
                android:fontFamily="@font/airbnbcereal_bk"
                android:textSize="14sp"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:textColor="#1A2530"
                android:layout_marginRight="20dp"
                />


        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>