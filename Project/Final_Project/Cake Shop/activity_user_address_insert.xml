<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.UserAddressInsertActivity"
    android:orientation="vertical"
    android:background="#F8F9FA"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:id="@+id/back_button_user_address_insert_activity"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/left2"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Address"
            android:fontFamily="@font/airbnbcereal_md"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:textColor="#1A2530"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Area"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"
        android:fontFamily="@font/airbnbcereal_md"
        android:textColor="#1A2530"
        />
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="50dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/white"
        android:outlineSpotShadowColor="@color/white"
        >
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/street_layout_user_address_insert_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="52dp"
            app:boxStrokeWidth="0dp"
            app:helperTextTextColor="#FF0000"
            app:hintEnabled="false"
            android:paddingLeft="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            >
            <EditText
                android:id="@+id/street_user_address_insert_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="52dp"
                android:background="@color/white"
                android:hint="Enter Block no, Building no and street name"
                android:text=""
                android:textColor="#1A2530"
                android:textColorHint="#707B81"
                android:textSize="14sp"
                android:fontFamily="@font/airbnbcereal_bk"
                android:textColorHighlight="#5B9EE1" />
        </com.google.android.material.textfield.TextInputLayout>
    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"
        android:fontFamily="@font/airbnbcereal_md"
        android:textColor="#1A2530"
        />
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="50dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/white"
        android:outlineSpotShadowColor="@color/white"
        >
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/city_layout_user_address_insert_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="52dp"
            app:boxStrokeWidth="0dp"
            app:helperTextTextColor="#FF0000"
            app:hintEnabled="false"
            android:paddingLeft="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            >
            <EditText
                android:id="@+id/city_user_address_insert_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="52dp"
                android:background="@color/white"
                android:hint="Enter city name"
                android:text=""
                android:textColor="#1A2530"
                android:textColorHint="#707B81"
                android:textSize="14sp"
                android:fontFamily="@font/airbnbcereal_bk"
                android:textColorHighlight="#5B9EE1" />
        </com.google.android.material.textfield.TextInputLayout>
    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="State"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"
        android:fontFamily="@font/airbnbcereal_md"
        android:textColor="#1A2530"
        />
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="50dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/white"
        android:outlineSpotShadowColor="@color/white"
        >
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/state_layout_user_address_insert_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="52dp"
            app:boxStrokeWidth="0dp"
            app:helperTextTextColor="#FF0000"
            app:hintEnabled="false"
            android:paddingLeft="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            >
            <EditText
                android:id="@+id/state_user_address_insert_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="52dp"
                android:background="@color/white"
                android:hint="Enter state name"
                android:text=""
                android:textColor="#1A2530"
                android:textColorHint="#707B81"
                android:textSize="14sp"
                android:fontFamily="@font/airbnbcereal_bk"
                android:textColorHighlight="#5B9EE1" />
        </com.google.android.material.textfield.TextInputLayout>
    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zipcode"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"
        android:fontFamily="@font/airbnbcereal_md"
        android:textColor="#1A2530"
        />
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="50dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/white"
        android:outlineSpotShadowColor="@color/white"
        >
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/zipcode_layout_user_address_insert_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="52dp"
            app:boxStrokeWidth="0dp"
            app:helperTextTextColor="#FF0000"
            app:hintEnabled="false"
            android:paddingLeft="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            >
            <EditText
                android:id="@+id/zipcode_user_address_insert_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="52dp"
                android:background="@color/white"
                android:hint="Enter zipcode"
                android:text=""
                android:inputType="number"
                android:textColor="#1A2530"
                android:textColorHint="#707B81"
                android:textSize="14sp"
                android:fontFamily="@font/airbnbcereal_bk"
                android:textColorHighlight="#5B9EE1" />
        </com.google.android.material.textfield.TextInputLayout>
    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Country"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"
        android:fontFamily="@font/airbnbcereal_md"
        android:textColor="#1A2530"
        />
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="50dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/white"
        android:outlineSpotShadowColor="@color/white"
        >
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/country_layout_user_address_insert_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="52dp"
            app:boxStrokeWidth="0dp"
            app:helperTextTextColor="#FF0000"
            app:hintEnabled="false"
            android:paddingLeft="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            >
            <EditText
                android:id="@+id/country_user_address_insert_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="52dp"
                android:background="@color/white"
                android:hint="Enter country"
                android:text=""
                android:textColor="#1A2530"
                android:textColorHint="#707B81"
                android:textSize="14sp"
                android:fontFamily="@font/airbnbcereal_bk"
                android:textColorHighlight="#5B9EE1" />
        </com.google.android.material.textfield.TextInputLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/add_new_address_button_user_address_insert_activity"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="#5B9EE1"
        app:cardCornerRadius="26dp"
        android:layout_marginTop="40dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Add New Address"
            android:textSize="16sp"
            android:textColor="@color/white"
            />

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>