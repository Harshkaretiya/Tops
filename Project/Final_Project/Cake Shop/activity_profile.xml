<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ProfileActivity"
    android:orientation="vertical"
    android:background="#F8F9FA"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:id="@+id/back_button_profile_activity"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/left2"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:fontFamily="@font/airbnbcereal_md"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:textColor="#1A2530"
            />
        <ImageView
            android:id="@+id/edit_image"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/edit"
            android:padding="10dp"
            android:layout_marginRight="20dp"
            />
    </RelativeLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="45dp"
        >
        <ImageView
            android:id="@+id/image_profile_activity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            />

    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:id="@+id/name_profile_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Profile name"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/airbnbcereal_md"
        android:textSize="20sp"
        android:textColor="#1A2530"
        />

    <RelativeLayout
        android:id="@+id/address_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="20dp"
        >
        <ImageView
            android:id="@+id/shipping_img"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/shipping"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/shipping_img"
            android:textSize="16sp"
            android:fontFamily="@font/airbnbcereal_bk"
            android:text="Shipping Address"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textColor="#1A2530"
            />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/right2"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:scaleType="centerCrop"
        android:layout_marginVertical="10dp"
        android:src="@drawable/line2"
        />
    <RelativeLayout
        android:id="@+id/payment_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="20dp"
        >
        <ImageView
            android:id="@+id/payment_img"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/payment"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/payment_img"
            android:textSize="16sp"
            android:fontFamily="@font/airbnbcereal_bk"
            android:text="Payment Info"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textColor="#1A2530"
            />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/right2"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:scaleType="centerCrop"
        android:layout_marginVertical="10dp"
        android:src="@drawable/line2"
        />
    <RelativeLayout
        android:id="@+id/order_history_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="20dp"
        >
        <ImageView
            android:id="@+id/order_history_img"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/order"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/order_history_img"
            android:textSize="16sp"
            android:fontFamily="@font/airbnbcereal_bk"
            android:text="Order History"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textColor="#1A2530"
            />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/right2"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:scaleType="centerCrop"
        android:layout_marginVertical="10dp"
        android:src="@drawable/line2"
        />
</LinearLayout>