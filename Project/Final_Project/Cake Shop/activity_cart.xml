<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CartActivity"
    android:background="#F8F9FA"
    >
    <TextView
        android:id="@+id/empty_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="List is Empty"
        android:fontFamily="@font/airbnbcereal_md"
        android:textSize="12sp"
        android:textColor="#707B81"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="220dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            >
            <ImageView
                android:id="@+id/back_button_cart_activity"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/left2"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Cart"
                android:fontFamily="@font/airbnbcereal_md"
                android:textSize="16sp"
                 android:layout_centerInParent="true"
                android:textColor="#1A2530"
                />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_item_cart_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/checkout_layout"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/top_round"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subtotal"
                android:textSize="16sp"
                android:fontFamily="@font/airbnbcereal_md"
                android:textColor="#707B81"
                />
            <TextView
                android:id="@+id/subtotal_price_cart_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:layout_alignParentRight="true"
                android:textSize="16sp"
                android:fontFamily="@font/airbnbcereal_md"
                android:textColor="#1A2530"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹"
                android:layout_toLeftOf="@id/subtotal_price_cart_activity"
                android:layout_marginRight="2dp"
                android:textSize="16sp"
                android:fontFamily="@font/airbnbcereal_md"
                android:textColor="#1A2530"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shipping"
                android:textSize="16sp"
                android:fontFamily="@font/airbnbcereal_md"
                android:textColor="#707B81"
                />
            <TextView
                android:id="@+id/shipping_price_cart_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:layout_alignParentRight="true"
                android:textSize="16sp"
                android:fontFamily="@font/airbnbcereal_md"
                android:textColor="#1A2530"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹"
                android:layout_toLeftOf="@id/shipping_price_cart_activity"
                android:layout_marginRight="2dp"
                android:textSize="16sp"
                android:fontFamily="@font/airbnbcereal_md"
                android:textColor="#1A2530"
                />
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/divider"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:layout_marginHorizontal="20dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Cost"
                android:textSize="16sp"
                android:fontFamily="@font/airbnbcereal_md"
                android:textColor="#1A2530"
                />
            <TextView
                android:id="@+id/total_cost_price_cart_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1050"
                android:layout_alignParentRight="true"
                android:textSize="16sp"
                android:fontFamily="@font/airbnbcereal_md"
                android:textColor="#1A2530"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹"
                android:layout_toLeftOf="@id/total_cost_price_cart_activity"
                android:layout_marginRight="2dp"
                android:textSize="16sp"
                android:fontFamily="@font/airbnbcereal_md"
                android:textColor="#1A2530"
                />
        </RelativeLayout>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/checkout_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="20dp"
            android:backgroundTint="#5B9EE1"
            app:cardCornerRadius="25dp"
            android:layout_marginHorizontal="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Checkout"
                android:textColor="@color/white"
                android:fontFamily="@font/airbnbcereal_md"
                android:textSize="18sp"
                android:layout_gravity="center"
                />
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</RelativeLayout>