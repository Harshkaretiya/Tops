<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.OrderViewActivity"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:id="@+id/back_button_profile_activity"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/left2"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Status"
            android:fontFamily="@font/airbnbcereal_md"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:textColor="#1A2530"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/image_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:outlineSpotShadowColor="@color/white"
            >
            <ImageView
                android:id="@+id/image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:fontFamily="@font/airbnbcereal_md"
            android:textSize="16sp"
            android:textColor="#1A2530"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/image_layout"
            />
        <TextView
            android:id="@+id/product_price_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹"
            android:fontFamily="@font/airbnbcereal_md"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:textColor="#1A2530"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/image_layout"
            android:layout_below="@id/product_name"
            />
        <TextView
            android:id="@+id/product_price_order_design"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"
            android:fontFamily="@font/airbnbcereal_md"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:textColor="#1A2530"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/product_price_tag"
            android:layout_below="@id/product_name"
            />
        <LinearLayout
            android:id="@+id/quantity_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_price_tag"
            android:layout_toRightOf="@id/image_layout"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Qty : "
                android:textColor="#707B81"
                android:fontFamily="@font/airbnbcereal_md"
                />
            <TextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="1"
                android:textColor="#707B81"
                android:fontFamily="@font/airbnbcereal_md"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Status : "
        android:textSize="18dp"
        android:fontFamily="@font/airbnbcereal_md"
        android:textColor="#1A2530"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        />

    <TextView
        android:id="@+id/orderStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="................"
        android:textSize="20dp"
        android:fontFamily="@font/airbnbcereal_bd"
        android:textColor="#1A2530"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ordered at address : "
        android:textSize="18dp"
        android:fontFamily="@font/airbnbcereal_md"
        android:textColor="#1A2530"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:id="@+id/location_icon"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:text="Your Location"
            android:src="@drawable/location"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp"
            />
        <TextView
            android:id="@+id/location_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Area"
            android:ellipsize="end"
            android:maxWidth="140dp"
            android:maxLines="1"
            android:layout_toRightOf="@id/location_icon"
            android:textSize="14sp"
            android:layout_marginBottom="5dp"
            android:layout_centerVertical="true"
            android:textColor="#1A2530"
            android:fontFamily="@font/airbnbcereal_md"
            />

        <TextView
            android:id="@+id/location_comma_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=","
            android:textSize="14sp"
            android:layout_marginBottom="5dp"
            android:layout_centerVertical="true"
            android:textColor="#1A2530"
            android:layout_marginRight="2dp"
            android:layout_toRightOf="@id/location_area"
            android:fontFamily="@font/airbnbcereal_md"
            />
        <TextView
            android:id="@+id/location_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City"
            android:ellipsize="end"
            android:maxWidth="80dp"
            android:maxLines="1"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:layout_marginBottom="5dp"
            android:textColor="#1A2530"
            android:layout_toRightOf="@id/location_comma_tag"
            android:fontFamily="@font/airbnbcereal_md"
            />
    </RelativeLayout>

</LinearLayout>