<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/image_layout_cart_design"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:outlineSpotShadowColor="@color/white"
        >
        <ImageView
            android:id="@+id/image_cart_design"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/product_name_cart_design"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Name"
        android:fontFamily="@font/airbnbcereal_md"
        android:textSize="16sp"
        android:textColor="#1A2530"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/image_layout_cart_design"
        />
    <TextView
        android:id="@+id/product_price_tag_cart_design"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â‚¹"
        android:fontFamily="@font/airbnbcereal_md"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        android:textColor="#1A2530"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/image_layout_cart_design"
        android:layout_below="@id/product_name_cart_design"
        />
    <TextView
        android:id="@+id/product_price_cart_design"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000"
        android:fontFamily="@font/airbnbcereal_md"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        android:textColor="#1A2530"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/product_price_tag_cart_design"
        android:layout_below="@id/product_name_cart_design"
        />
    <LinearLayout
        android:id="@+id/quantity_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_price_tag_cart_design"
        android:layout_toRightOf="@id/image_layout_cart_design"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:id="@+id/quantity_subtract_cart_design"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:padding="2dp"
            android:src="@drawable/subtract"
            />
        <TextView
            android:id="@+id/quantity_cart_design"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="1"
            android:textColor="#707B81"
            android:fontFamily="@font/airbnbcereal_md"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:id="@+id/quantity_add_cart_design"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:padding="2dp"
            android:src="@drawable/add"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/delete_cart_design"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:padding="10dp"
        android:src="@drawable/remove"
        />
</RelativeLayout>